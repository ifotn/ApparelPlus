@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>
<a asp-controller="Categories" asp-action="Create">Create New Category</a>
<table class="table table-striped table-hover">
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>
                <a class="btn btn-primary" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.CategoryId">
                    Edit
                </a>
                <a class="btn btn-danger" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.CategoryId" onclick="return confirmDelete();">
                    Delete
                </a>
            </td>
        </tr>
    }
</table>